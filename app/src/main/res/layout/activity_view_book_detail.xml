<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBookDetail">
    <include layout="@layout/toolbar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop"
        android:layout_height="0dp"
        android:id="@+id/ivBookdetail"
        android:layout_weight="3"/>
    <TextView
        android:textSize="30sp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/tvbookdetailname"
        android:layout_weight="1"/>
    <TextView
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tvbookdetailowner"
        android:layout_weight="1"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:scrollbars="horizontal"
        android:id="@+id/scrollGenres"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/genreButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </ScrollView>
    <TextView
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/tvBookdetailDesc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBookdetailAddtolib"
            android:text="Add To Library"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnread"
            android:layout_marginHorizontal="20dp"
            android:text="Read"/>
    </LinearLayout>
</LinearLayout>